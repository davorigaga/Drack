@model Drack.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    ViewBag.Subtitle = "Create a new account";
}

<div class="container text-left">
    <div class="row">
        <div class="col-md-12">
            <section id="account-form" class="text-center">
                <div class="row text-center">
                    <div class="col-sm-12">
                        <h3 class="font-weight-light text-secondary m-2">@ViewBag.Title</h3>
                        <p>
                            <i class="fas fa-user-plus icon-lg text-primary"></i>
                        </p>
                    </div>
                </div>
                @using (Html.BeginForm("Register", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-account", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <p class="font-weight-light text-center text-primary">@ViewBag.Subtitle</p>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    @Html.LabelFor(m => m.FullName, new { @class = "sr-only", @for = "FullName" })
                    @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", placeholder = "Driver full name", autofocus = "autofocus" })
                    @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "text-danger" })

                    @Html.LabelFor(m => m.GarageId, new { @class = "sr-only", @for = "FullName" })
                    @Html.DropDownList("GarageId", null, htmlAttributes: new { @class = "custom-select" })
                    @Html.ValidationMessageFor(m => m.GarageId, "", new { @class = "text-danger" })

                    @Html.LabelFor(m => m.Email, new { @class = "sr-only", @for = "Email" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email address", autofocus = "autofocus" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

                    @Html.LabelFor(m => m.Password, new { @class = "sr-only", @for = "Password" })
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password", autofocus = "autofocus" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "sr-only", @for = "ConfirmPassword" })
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password", autofocus = "autofocus" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })

                    <input type="submit" value="Register" id="register-btn" class="btn btn-lg btn-primary btn-block" />
                    <p>
                        @Html.ActionLink("Or Log in if you have an account", "Login")
                    </p>
                }
            </section>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
