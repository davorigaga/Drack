@model Drack.Models.ForgotPasswordViewModel

@{
    ViewBag.Title = "Forgot your password?";
    ViewBag.Subtitle = "Please enter the email to your account.";
}

<div class="row">
    <div class="col-md-12">
        <section id="account-form">
            <div class="row text-center">
                <div class="col-sm-12">
                    <h3 class="font-weight-light text-secondary m-2">@ViewBag.Title</h3>
                    <p>
                        <i class="fas fa-lock icon-lg text-primary"></i>
                    </p>
                </div>
            </div>

            @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-account", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <p class="font-weight-light text-center text-primary">@ViewBag.Subtitle</p>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @Html.LabelFor(m => m.Email, new { @class = "sr-only", @for = "Email" })
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email address", autofocus = "autofocus" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

                <input type="submit" value="Send Link" class="btn btn-lg btn-primary btn-block" />
            }
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}