@{
    ViewBag.Title = "Forgot Password Confirmation";
    ViewBag.Subtitle = "Please check your email to reset your password.";
}

<div class="row">
    <div class="col-md-12">
        <section id="account-form">
            <div class="row text-center">
                <div class="col-sm-12">
                    <h3 class="font-weight-light text-secondary m-2">@ViewBag.Title</h3>
                    <p>
                        <i class="fas fa-envelope-open-text icon-lg text-primary"></i>
                    </p>
                </div>
            </div>

            <p class="font-weight-light text-center text-primary">
                @ViewBag.Subtitle
            </p>
        </section>
    </div>
</div>